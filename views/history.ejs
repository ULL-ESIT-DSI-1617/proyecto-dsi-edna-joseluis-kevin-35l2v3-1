						<h1>Historial</h1>
					</div>
					<div class="row">
						<div class="col-sm-12">
							<table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <td><strong>Fecha</strong></td>
                                        <td><strong>Operación</strong></td>
                                    </tr>
                                </thead>
                                <% if (histor.length > 0) { %>
                                    <% for (var i = histor.length - 1; i >= 0; i--) { %>
                                        <tr>
                                            <td><%= histor[i].date.toGMTString() %></td>
                                            <td><%= histor[i].operation %></td>
                                        </tr>
                                    <% } %>
                                <% } else { %>
                                    <tr>No hay operaciones guardadas</tr>
                                <% } %>
                            </table>
                            <form action="/history/delete" method="get">
                                <button type="submit" class="btn btn-danger">Borrar historial</button>
                            </form>
						</div>
					</div>
				</div>
				<div class="col-sm-3"></div>
			</div>
